<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="#344BC4">
    
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/logoCompagnie"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"/>
    <View
        android:id="@+id/viewLogo"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/logoCompagnie"
        app:layout_constraintEnd_toEndOf="@id/logoCompagnie"
        app:layout_constraintStart_toStartOf="@id/logoCompagnie"
        app:layout_constraintBaseline_toTopOf="@id/logoCompagnie"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/companie"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/viewLogo"
        app:layout_constraintStart_toEndOf="@id/logoCompagnie"
        android:paddingTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>